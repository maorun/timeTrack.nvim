-- Coverage configuration for luacov
includes = {
  "lua/"
}
excludes = {
  ".luarocks/", -- Exclude anything from .luarocks paths
  "/usr/share/lua/", -- Standard system Lua path
  "/usr/local/share/lua/", -- Another standard system Lua path
  "/.local/share/nvim/", -- User Neovim path (often contains other plugins)
  "site-packages/", -- Common for Python virtual envs, but good to have if Lua interop exists
  "share/nvim/runtime/", -- Standard Neovim runtime files
  "pack/packer/" -- Common packer path
}
